{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6 col-sm-12 col-xs-12 offset-md-3 login-container">
    <div class="login-title">
      <h1>LOGIN</h1>
    </div>

    <div class="login-error">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>

    <div class="login-form">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-group">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <label ></label>
            <input  type="text" id="username"  class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />

            <label ></label>
            <input  type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" />


            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">remembre me</label>


            <br>
            <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="Submit" />
        </form>
    </div>
</div>