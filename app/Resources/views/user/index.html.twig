{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Users list</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Is Admin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles[0]=='ROLE_ADMIN'?'YES':'NO' }}</td>
                    <td>
                    <ul class="ul-style">
                            <li >
                                <a class="btn btn-info" href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                            </li>
                            <li >
                                <a class="btn btn-default" href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                            </li>
                            <li >
                                <a class="btn btn-danger" href="{{ path('user_delete', { 'id': user.id }) }}">delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul class="ul-style">
            <li>
                <a class="btn btn-primary" href="{{ path('user_new') }}">Create a new user</a>
            </li>
        </ul>
    </div>
{% endblock %}
